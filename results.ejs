<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Voting Results</title>
    <style>
        body {
            background: url('/images/backgroundimage.jpg') no-repeat center center fixed;
            background-size: cover;
            position: relative;
            margin: 0;
            padding: 0;
            height: 100vh;
            width: 100vw;
        }
    
        body::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            z-index: -1;
        }
    </style>
    <title>Voting Results</title>
</head>
<body style="background-color: #fff; margin: 0; padding: 0; display: flex; align-items: center; justify-content: center; height: 100vh;">

    <div style="background: #f8f9fa; padding: 30px; border-radius: 10px; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); text-align: center; width: 350px;">
        
        <h2 style="font-family: 'Poppins', sans-serif; color: #333; margin-bottom: 20px;">Voting Results</h2>

        <% if (results.length > 0) { %>
            <ul style="list-style-type: none; padding: 0;">
                <% results.forEach(result => { %>
                    <li style="font-size: 18px; font-weight: bold; color: #007bff; background: #fff; padding: 10px; margin-bottom: 8px; border-radius: 8px; border: 1px solid #ccc;">
                        <%= result.party %>: <%= result.votes %> votes
                    </li>
                <% }); %>
            </ul>
        <% } else { %>
            <p style="color: #555; font-size: 16px; font-weight: bold;">No votes have been cast yet.</p>
        <% } %>

        <a href="/" 
            style="display: inline-block; background: #007bff; color: #fff; padding: 12px 25px; border-radius: 8px; text-decoration: none; font-size: 16px; font-weight: bold; transition: 0.3s;">
            Home
        </a>
    </div>

    <style>
        a:hover {
            background: #0056b3;
            transform: scale(1.05);
        }
    </style>

</body>